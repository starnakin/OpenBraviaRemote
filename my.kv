WindowManager:
    IpWindow:
    PinWindow:
    HomeWindow:

<IpWindow>:
    name:"ip"
    ip:ip
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2
            Label:
                text:"ip :"
            TextInput:
                text: root.ip_saved
                id:ip
                multiline:False

        Button:
            text:"Connection"
            on_press:root.connection()

<PinWindow>:
    name: "pin"
    pin:pin
    GridLayout:
        cols:1
        size: root.width, root.height

        BoxLayout:
            cols:2
            Label:
                text:root.ip_saved
            Label:
                text:"pin :"
            TextInput:
                id:pin
                multiline:False

        Button:
            text:"Connection"
            on_press:root.connection()

<HomeWindow>:
    name: "home"
    searched:searched
    BoxLayout:
        spacing: "10dp"
        padding: ("40dp", "40dp", "40dp", "40dp")
        orientation: "vertical"
        BoxLayout:
            spacing: "10dp"
            orientation: "vertical"
            Button:
                size_hint: 1 , .1
                text:"Disconnect"
                on_press: root.disconnect()
            BoxLayout:
                spacing: "10dp"
                size_hint: 1 , .1
                Button:
                    text:"Power"
                    on_press:root.power_switch()
                    background_normal: "image/power.jpg"
                Button:
                    text:"Input"
                    on_press:root.input()
                    background_normal: "image/input.jpg"

            GridLayout:
                spacing: "10dp"
                cols:3
                Button:
                    
                    on_press:root.home()
                    background_normal: "image/home.jpg"
                Button:
                    
                    on_press:root.up()
                    background_normal: "image/up.jpg"
                Button:
                    
                    on_press:root.retour()
                    background_normal: "image/retour.jpg"
                Button:
                    
                    on_press:root.left()
                    background_normal: "image/left.jpg"
                Button:
                    
                    on_press:root.confirm()
                    background_normal: "image/confirm.jpg"
                Button:
                    
                    on_press:root.right()
                    background_normal: "image/right.jpg"
                Button:
                    
                    on_press:root.netflix()
                    background_normal: "image/netflix.jpg"            
                Button:
                    on_press:root.down()
                    background_normal: "image/down.jpg"
                Button:
                    on_press:root.youtube()
                    background_normal: "image/youtube.jpg"            
                Button:
                    on_press: root.volume_down()
                    background_normal: "image/volume_down.jpg"            
                Button:
                    on_press: root.volume_mute()
                    background_normal: "image/volume_mute.jpg"
                Button:
                    on_press: root.volume_up()     
                    background_normal: "image/volume_up.jpg"
                Button:
                    text:"1"
                    on_press:root.one()
                Button:
                    text: "2"
                    on_press:root.two()
                Button:
                    text: "3"
                    on_press:root.three()
                Button:
                    text: "4"
                    on_press:root.four()
                Button:
                    text: "5"
                    on_press:root.five()
                Button:
                    text: "6"
                    on_press:root.six()
                Button:
                    text: "7"
                    on_press:root.seven()
                Button:
                    text: "8"
                    on_press:root.eight()
                Button:
                    text: "9"
                    on_press:root.nine()
                Button: 
                    text:"-"
