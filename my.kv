                Button:
                    text: "0"
                    on_press:root.zero()
                Button:
                    text: "+"
                    on_press:root.channel_up()
            BoxLayout:
                spacing: "10dp"
                size_hint: 1 , .25
                orientation: "vertical"
                TextInput:
                    id: searched    
                BoxLayout:
                    Button:
